{
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer <YOUR_GITHUB_PAT_TOKEN>"
      }
    },
    "playwright-logged-in": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--user-data-dir=<PATH_TO_YOUR_CHROME_PROFILE>"
      ],
      "env": {}
    },
    "playwright-fresh": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "env": {}
    }
  }
}
